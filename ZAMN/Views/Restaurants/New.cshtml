@{
  Layout = "_Layout";
}

<div class="gridHeader">
  <div class="header">
    <ul class="menu">
      <li><a href='/'>HOME</a></li>
      <li><a href='/restaurants'>FOOD</a></li>
      <li><a href='/hikes'>HIKES</a></li>
      <li><a href='/login/new'>LOGIN</a></li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="addnewrest">
    <h2>Add a restaurant</h2>
    <hr>
    <div class="row">
      <div class="col-md-12 panel-body">
        <form action="/restaurants" method="post">
          <div class="form-group">
            <label for="name">Restaurant name</label>
            <input id="name" name="name" type="text">
          </div>
          <div class="form-group">
            <label for="address">Nearby surf spot</label>
            <input id="address" name="address" type="text">
            <br>
          </div>
          <div class="form-group">
            <label for="type">Type of food</label>
            <input id="type" name="type" type="text">
          </div>
          <div class="form-group">
            <label for="description">Tell us about your experience</label>
            <TEXTAREA name="description" ROWS="2" COLS="20" type="text"></TEXTAREA>
          </div>
          <button class="btn btn-success" type="submit">Add</button>
        </form>
      </div>
    </div>
    <br>
    <p><a href="/restaurants">Back to restaurants</a></p>
  </div>
</div>
