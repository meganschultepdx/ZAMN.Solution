@{
    Layout = "_Layout";
    ViewData["Title"] = "Restaurants";
}

<div class=container>
  <h2>@ViewData["Title"]</h2>
  <hr>

  @if (@Model.Count == 0)
  {
    <h3>No restaurants have been added yet!</h3>
  }

  @foreach (var restaurant in Model)
  {
    <h3><a href="/restaurants/@restaurant._restaurantId">@restaurant._restaurantName</a>
    <p>@restaurant._restaurantAddress</p>
    <p>@restaurant._restaurantType</p>
    </h3>
  }

  <br>
  <p><a href='/restaurants/new'>Add a new restaurant</a></p>
  <p><a href='/restaurants/delete'>Delete all restaurants</a></p>

</div>
